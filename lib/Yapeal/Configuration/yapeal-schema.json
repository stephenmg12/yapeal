{
    "type": "object",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "required": ["yapeal"],
    "properties": {
        "yapeal": {
            "type": "object",
            "required": ["registered_mode", "Cache", "Database", "Logging"],
            "properties": {
                "application_agent": {
                    "type": "string",
                    "default": "{application_agent} Yapeal/{version} {stability} ({OS} {arch}) libcurl/{curl_version}"
                },
                "registered_mode": {
                    "type": "string",
                    "enum": ["ignored", "optional", "required"]
                },
                "Cache": {
                    "type": "object",
                    "properties": {
                        "dir": {
                            "type": "string",
                            "default": "{libraryBase}/cache"
                        },
                        "interval": {
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 366,
                            "default": 7
                        },
                        "to": {
                            "type": "string",
                            "enum": ["none", "file", "database", "both"],
                            "default": "file"
                        }
                    },
                    "required": ["interval", "to"]
                },
                "Database": {
                    "type": "object",
                    "oneOf": [
                        {
                            "properties": {
                                "dbname": {
                                    "type": "string",
                                    "default": "yapeal"
                                },
                                "host": {
                                    "type": "string",
                                    "oneOf": [
                                        {
                                            "format": "host-name"
                                        },
                                        {
                                            "format": "ipv4"
                                        },
                                        {
                                            "format": "ipv6"
                                        }
                                    ]
                                },
                                "password": {
                                    "type": "string",
                                    "default": "secret"
                                },
                                "port": {
                                    "type": "integer",
                                    "minimum": 0,
                                    "maximum": 65535
                                },
                                "prefix": {
                                    "enum": ["mysql", "pgsql"],
                                    "default": "mysql"
                                },
                                "user": {
                                    "type": "string",
                                    "default": "YapealUser"
                                }
                            },
                            "required": ["prefix", "host", "password", "user"]
                        },
                        {
                            "properties": {
                                "prefix": {
                                    "enum": ["sqlite"]
                                },
                                "file": {
                                    "type": "string"
                                }
                            },
                            "required": ["prefix", "file"]
                        },
                        {
                            "properties": {
                                "prefix": {
                                    "enum": ["sqlite"]
                                },
                                "memory": {
                                    "enum": ["memory:"]
                                }
                            },
                            "required": ["prefix", "memory"]
                        }
                    ]
                },
                "Logging": {
                    "type": "object",
                    "required": ["dir", "level"],
                    "properties": {
                        "dir": {
                            "type": "string",
                            "default": "{libraryBase}/logs"
                        },
                        "level": {
                            "type": "string",
                            "enum": ["emergency", "alert", "critical", "error",
                                "warning", "notice", "info", "debug"],
                            "default": "warning"
                        },
                        "locale": {
                            "type": "string",
                            "default": "en_US"
                        }
                    }
                }
            }
        }
    }
}
